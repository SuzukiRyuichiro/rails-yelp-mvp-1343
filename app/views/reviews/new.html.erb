<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header">
          <h4 class="mb-0">Write a Review</h4>
        </div>
        <div class="card-body">
          <%= simple_form_for([@restaurant, @review], html: { class: 'form-horizontal' }) do |f| %>
            <% if @review.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h5>
                <ul>
                  <% @review.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.input :rating, as: :integer, input_html: { min: 1, max: 5, class: 'form-control' }, hint: 'Rate between 1 and 5.', label_html: { class: 'form-label' } %>
            </div>
            <div class="form-group">
              <%= f.input :content, as: :text, placeholder: 'Write your review here...', input_html: { rows: 5, class: 'form-control' }, label_html: { class: 'form-label' } %>
            </div>
            <div class="form-group text-center">
              <%= f.button :submit, 'Submit Review', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
