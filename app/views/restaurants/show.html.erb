<div class="container mt-5">
  <div class="card shadow mb-4">
    <div class="card-body">
      <h1 class="card-title display-4 text-center"><%= @restaurant.name %></h1>
      <hr>
      <p class="card-text">
        🏠 <%= @restaurant.address %>
      </p>
      <p class="card-text">
        ⛳️ <%= @restaurant.category.capitalize %>
      </p>
      <p class="card-text">
        ☎️ <%= @restaurant.phone_number %>
      </p>
      <hr>
      <div class="text-center mt-3">
        <%= link_to 'Back to Restaurants', restaurants_path, class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  </div>
  <!-- Reviews Section -->
  <div class="d-flex mb-2 justify-content-between align-items-center">
    <h3>
      💬 Reviews:
    </h3>
    <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary btn-sm' %>
  </div>
  <% @restaurant.reviews.each do |review| %>
    <div class="card mb-3 shadow">
      <div class="card-body">
        <h5 class="card-title">Rating: <%= "⭐️ " * review.rating %></h5>
        <p class="card-text"><%= review.content %></p>
      </div>
    </div>
  <% end %>
</div>
