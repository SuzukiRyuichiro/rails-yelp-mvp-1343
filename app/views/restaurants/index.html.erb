<div class="container mt-5">
  <h1 class="display-3 text-center mb-4">Restaurants</h1>
  <div class="list-group">
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
        <span><%= restaurant.country_flag %> <%= restaurant.name %></span>
        <i class="fas fa-chevron-right"></i>
      <% end %>
    <% end %>
  </div>
</div>
