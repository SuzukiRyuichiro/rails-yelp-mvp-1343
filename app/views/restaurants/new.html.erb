<div class="container mt-5">
  <h1 class="display-4 text-center mb-4">🍔 Add a New Restaurant 🍔</h1>
  <%= simple_form_for @restaurant, html: { class: 'border p-4 shadow' } do |f| %>
    <div class="mb-3">
      <%= f.input :name, input_html: { class: 'form-control' }, placeholder: 'Restaurant Name', label: 'Name' %>
    </div>
    <div class="mb-3">
      <%= f.input :address, input_html: { class: 'form-control' }, placeholder: 'Restaurant Address', label: 'Address' %>
    </div>
    <div class="mb-3">
      <%= f.input :phone_number, input_html: { class: 'form-control' }, placeholder: 'Phone Number', label: 'Phone Number' %>
    </div>
    <div class="mb-3">
      <%= f.input :category, collection: %w[chinese italian japanese french belgian], prompt: 'Select a Category', input_html: { class: 'form-select' }, label: 'Category' %>
    </div>
    <div class="text-center">
      <%= f.button :submit, 'Add Restaurant', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
